{
  "name": "afi-core",
  "version": "1.0.0",
  "description": "Core runtime for agent signal validation in AFI Protocol",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validators": {
      "import": "./dist/validators/index.js",
      "types": "./dist/validators/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas/index.js",
      "types": "./dist/schemas/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "simulate-signal": "node dist/ops/runner/simulate-full-pipeline.js",
    "simulate-from-vault": "node dist/ops/runner/simulate-full-pipeline.js --from-vault",
    "replay-vault": "node dist/ops/runner/replay-vault-signals.js",
    "replay-vault-crypto": "node dist/ops/runner/replay-vault-signals.js --filter marketType:crypto",
    "replay-vault-mature": "node dist/ops/runner/replay-vault-signals.js --filter lifecycleStage:mature --limit 10",
    "codex-lint": "node dist/ops/codexLint.js",
    "mentor-eval": "node dist/ops/mentorChain.js",
    "test": "vitest",
    "test:run": "vitest run",
    "validate-all": "npm run build:clean && npm run codex-lint && npm run simulate-signal && npm run mentor-eval && npm run test:run",
    "validate-phase2": "node validate-phase2.js",
    "architecture-test": "npm run build && node -e \"console.log('Architecture test passed')\"",
    "phase2-verify": "npm run build && npm run test:run && echo 'Phase 2 verification complete'"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "afi",
    "validator",
    "mentor",
    "runtime",
    "typescript"
  ],
  "author": "AFI Protocol",
  "license": "MIT"
}
